//- layout.jade
doctype html
html
  head
    block title
      title HeroyvJS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='/vendor/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css')
    link(rel='stylesheet', href='/css/app.css')
  body
    header.header
      div.row
        div.column
          if (user)
            span.username Welcome, #{user.username}
    main.push
      div.row
        div.sidebar.column.medium-2
          aside
            ul.sidebar-menu
              li
                a(href='/') <i class="fa fa-home"></i> Home
              if (!user)
                li
                  a(href='/login') <i class="fa fa-sign-in"></i> Log in
                li
                  a(href='/register') <i class="fa fa-user-plus"></i> Sign up
              if (user)
                li
                  a(href='/bookings') <i class="fa fa-bookmark"></i> Bookings
                li
                  a(href='/bookings/create') <i class="fa fa-plus"></i> Create
                li
                  a(href='/logout') Log out
              
        div.content.column.medium-10
          block content
      
    
    script(src='../vendor/jquery/dist/jquery.min.js')
    script(src='../vendor/moment/moment.js')
    script(src='../vendor/foundation.min.js')
    script(src='../vendor/moment-timezone/moment-timezone.js')
    script(src='../vendor/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js')
    script(src='../js/bundle.js')
    script.
      $(function () {          
          
           $('#datetimepicker12').datetimepicker({
               inline: true,
               sideBySide: false
           });
           
       });
      
    
    
      
